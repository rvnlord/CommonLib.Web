@page "/Account/ForgotPassword/"

@using CommonLib.Web.Source.Common.Components.MyInputComponent
@using CommonLib.Web.Source.Common.Converters
@using CommonLib.Web.Source.Common.Utils.UtilClasses
@using CommonLib.Source.Common.Utils.UtilClasses

@inherits ForgotPasswordBase

<CascadingValue Value="_bpParentToCascade" Name="ParentParameter">

    <div class="my-col-sm-auto my-col-12" style="background: #101010;">
        <MyEditForm @ref="_editForm" EditContext="_editContext" OnValidSubmit="FormChangeForgottenPassword_ValidSubmitAsync" class="my-container">
            <MyFluentValidator @ref="_validator" />
            <div class="my-row">
                <div class="my-col-12">
                    <h3>Forgot Password</h3>
                    <hr class="my-mt-10px" />
                </div>
            </div>
            <div class="my-row">
                <div class="my-col-xl-2 my-col-lg-3 my-col-sm-6 my-col-12">
                    <MyLabel For="@(() => _forgotPasswordUserVM.UserName)" Align="@HorizontalAlignment.Right" />
                </div>
                <div class="my-col-xl-3 my-col-lg-4 my-col-sm-6 my-col-12">
                    <MyTextInput State="InputState.ForceDisabled" For="@(() => _forgotPasswordUserVM.UserName)" SyncPaddingGroup="forgot-password-panel">
                        <MyInputGroupPrepend>
                            <MyIcon IconType="IconType.From(LightIconType.User)"></MyIcon>
                        </MyInputGroupPrepend>
                    </MyTextInput>
                </div>
                <div class="my-col-xl-7 my-col-lg-5 my-col-12 my-d-none-if-empty">
                    <MyValidationMessage For="@(() => _forgotPasswordUserVM.UserName)" />
                </div>
            </div>
            <div class="my-row">
                <div class="my-col-xl-2 my-col-lg-3 my-col-sm-6 my-col-12">
                    <MyLabel For="@(() => _forgotPasswordUserVM.Email)" Align="@HorizontalAlignment.Right" />
                </div>
                <div class="my-col-xl-3 my-col-lg-4 my-col-sm-6 my-col-12">
                    <MyTextInput For="@(() => _forgotPasswordUserVM.Email)" SyncPaddingGroup="forgot-password-panel">
                        <MyInputGroupPrepend>
                            <MyIcon IconType="IconType.From(LightIconType.Envelope)"></MyIcon>
                        </MyInputGroupPrepend>
                    </MyTextInput>
                </div>
                <div class="my-col-xl-7 my-col-lg-5 my-col-12 my-d-none-if-empty">
                    <MyValidationMessage For="@(() => _forgotPasswordUserVM.Email)" />
                </div>
            </div>
            <div class="my-row">
                <div class="my-col-xl-10 my-col-lg-9 my-col-sm-6 my-col-12 my-offset-xl-2 my-offset-lg-3 my-offset-sm-6">
                    <MyButton Value="@("Change Forgotten Password".ToBp())" SubmitsForm="true" OnClick="BtnChangeForgottenPassword_ClickAsync" Icon="IconType.From(LightIconType.Memory)" Styling="ButtonStyling.Primary" Sizing="ButtonSizing.Auto" IconPlacement="ButtonIconPlacement.Right" class="my-btn-forgot-password" />
                </div>
            </div>
            <div class="my-row">
                <div class="my-col-xl-10 my-col-lg-9 my-col-sm-6 my-col-12 my-offset-xl-2 my-offset-lg-3 my-offset-sm-6">
                    <MyNavLink To="@($"~/Account/ResetPassword?{GetNavQueryStrings()}")" Icon="IconType.From(LightIconType.KeySkeleton)" IconPlacement="NavLinkIconPlacement.Right">I already have Reset Password Code</MyNavLink>
                </div>
            </div>
        </MyEditForm>
    </div>

</CascadingValue>