@namespace CommonLib.Web.Source.Common.Components

@using CommonLib.Source.Common.Converters
@using static CommonLib.Web.Source.Common.Components.StylesConfig

@inherits MyComponentStylesBase

<style class="@_renderClasses" my-guid="@_guid">
    
    html {
        height: 100%;
        max-height: 100%;
    }

    body {
        padding-top: 0;
        color: white;
        margin: 0;
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, "Noto Sans", sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol", "Noto Color Emoji";
        font-size: 16px;
        font-weight: 400;
        line-height: 1.5;
        text-align: left;
        height: 100%;
        max-height: 100%;
        background-image: linear-gradient(rgba(0,0,0,0.2), rgba(0,0,0,0.2)), url(data:image/png;base64,);
        background-clip: border-box;
        background-origin: padding-box;
        background-attachment: scroll;
        background-repeat: repeat;
        background-size: auto;
        background-position: left top;
    }

    .footer:first-child {
        display: none;
    }

    a {
        text-decoration: none;
        cursor: pointer;
    }

    p {
        display: block;
        margin-block-start: 0;
        margin-block-end: 0;
        margin-inline-start: 0;
        margin-inline-end: 0;
    }

    h1, h2, h3, h4, h5, h6, .h1, .h2, .h3, .h4, .h5, .h6 {
        margin: 0;
        line-height: 1.5;
        font-weight: 500;
        display: block;
    }

    h1, .h1 {
        font-size: 2.5rem;
    }

    @for (double i = 2; i <= 6; i++)
    {
        const double hSize = 2.25;
        @: h@(i), .h@(i) {
        @: font-size: @((hSize - 0.25 * (i - 1)).Rem());
        @: }
    }

    footer {
        margin-top: 20px;
    }

    svg {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        vertical-align: baseline;
        overflow: hidden;
    }

        .my-icon svg path {
            fill: white;
        }

    :focus {
        outline: none;
    }

    #app, .my-body { /* #app div in blazor webassembly can't have class' */
        position: relative;
        display: flex;
        flex-flow: column;
        height: 100%;
        width: 100%;
    }

    .my-page-scroll-container {
        @*height: @(IsElectron ? "calc(100vh - 35px)" : "100vh");
        max-height: @(IsElectron ? "calc(100vh - 35px)" : "100vh");*@
        width: 100%;
        flex: 1 1 auto;
    }

    .my-nav-content > div:first-child {
        height: 420px;
        min-height: 420px;
        padding-top: 420px;
    }

    .my-page-container {
        display: flex;
        justify-content: center;
        width: 100%;
        margin-top: 57px;
    }

    .my-page-content {
        overflow: auto;
        max-width: @MaxPageWidth.Px();
        width: 100%;
        overflow: hidden;
        position: relative;
    }

    .my-nav-container {
        display: flex;
        justify-content: center;
        width: 100%;
        overflow: visible;
        z-index: 2;
    }

    .my-nav-content {
        overflow: auto;
        max-width: 1280px;
        width: 100%;
        overflow: visible;
        position: relative;
    }

    @@-webkit-keyframes fadeIn {
        from {
            opacity: 0;
        }

        to {
            opacity: 1;
        }
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
        }

        to {
            opacity: 1;
        }
    }

    @@-webkit-keyframes fadeOut {
        from {
            opacity: 1;
        }

        to {
            opacity: 0;
        }
    }

    @@keyframes fadeOut {
        from {
            opacity: 1;
        }

        to {
            opacity: 0;
        }
    }

    .my-page-content > .my-container.css-transition {
        padding-top: 0;
    }

    .my-page-content > .my-container.css-transition > * {
        -webkit-animation: fadeIn 0.5s ease-in-out;
        animation: fadeIn 0.5s ease-in-out;
    }

    .my-page-content > .my-container.css-transition > *:first-child,
    .my-page-content > .my-container.css-transition > .my-prompt + * {
        margin-top: 0;
    }

    .my-page-content > .my-container.disable-css-transition > * {
        -webkit-animation: fadeIn 0 ease-in-out !important;
        animation: fadeIn 0 ease-in-out !important;
    }

    .os-theme-dark > .os-scrollbar > .os-scrollbar-track > .os-scrollbar-handle {
        background: rgba(80, 80, 80, 0.6);
    }

        .os-theme-dark > .os-scrollbar > .os-scrollbar-track > .os-scrollbar-handle:hover {
            background: rgba(255, 255, 255, 0.8);
        }

    .os-theme-dark > .os-scrollbar > .os-scrollbar-track > .os-scrollbar-handle.active {
        background: rgba(255, 255, 255, 0.8);
    }

    div[class*="col-"].d-none-if-empty:empty,
    div[class^="col-"].d-none-if-empty:empty,
    div[class*="col-"].d-none-if-empty.empty,
    div[class^="col-"].d-none-if-empty.empty,
    .d-none-if-empty:empty,
    .d-none-if-empty.empty {
        display: none !important;
    }

    .my-align-items-center {
        -ms-flex-align: center !important;
        align-items: center !important;
    }

    .my-align-self-center {
        align-self: center !important;
    }

    .no-page-error {
        margin: 5px;
        margin-top: 0;
        background: linear-gradient(150deg, rgba(30, 30, 30, 0.95) 0, rgba(8, 8, 8, 0.95) 40%);
        display: flex;
        width: 100%;
        height: 300px;
        align-items: center;
        justify-content: center;
        font-weight: 500;
        font-size: 20px;
        box-shadow: inset 0 0 0 1px #ff3030;
    }

    .my-css-grid-item > .no-page-error {
        margin: 0;
    }

    .my-line-sized {
        width: @LineHeight.Px();
        height: @LineHeight.Px();
    }

/* #region SPINNER */

    .spinner {
        border: 10px solid #404040;
        border-top: 10px solid blue;
        border-radius: 50%;
        width: 80px;
        height: 80px;
        animation: spin 700ms linear infinite;
    }

    @@keyframes spin {
        0% {
            transform: rotate(0)
        }

        100% {
            transform: rotate(360deg)
        }
    }

    .spinner-container {
        position: absolute;
        height: 100%;
        width: 100%;
        align-items: center;
        justify-content: center;
        margin: 5px;
        display: flex;
        flex-direction: column;
    }

    .spinner-message {
        margin-top: 10px;
    }

    .spinner-button {
        border: 5px solid #404040;
        border-top: 5px solid lightblue;
        border-radius: 50%;
        height: 26px;
        width: 26px;
        animation: spin 700ms linear infinite;
    }

    .btn-success .spinner-button {
        height: 52px;
        width: 52px;
    }

/* #endregion */

</style>
