@namespace CommonLib.Web.Source.Common.Components.MyFileUploadComponent
@using CommonLib.Web.Source.Common.Converters
@using CommonLib.Web.Source.Common.Utils.UtilClasses
@inherits CommonLib.Web.Source.Common.Components.MyFileUploadComponent.MyFileUploadBase

<CascadingValue Value="_bpParentToCascade" Name="ParentParameter">
    
    <div id="@_id" my-guid="@_guid" class="@_renderClasses" style="@_renderStyle" @attributes="@_renderAttributes">
        <div class="my-fileupload-thumbnail-container"><div>No Thumbnail</div></div>
        <div class="my-fileupload-drop-container">Drop File here...</div>
        <div class="my-fileupload-buttons-container">
            <div class="my-fileupload-btn-select-container">
                <MyButton Value="@("Select".ToBp())" Icon="IconType.From(LightIconType.File)" Styling="@ButtonStyling.Primary" Sizing="ButtonSizing.Fill" IconPlacement="ButtonIconPlacement.Right" />
            </div>
            <div class="my-fileupload-btn-upload-container">
                <MyButton Value="@("Upload".ToBp())" Icon="IconType.From(LightIconType.Upload)" Styling="@ButtonStyling.Primary" Sizing="ButtonSizing.Fill" IconPlacement="ButtonIconPlacement.Right" />
            </div>
            <div class="my-fileupload-btn-pause-selected-container">
                <MyButton Value="@("Pause Selected".ToBp())" Icon="IconType.From(LightIconType.Pause)" Styling="@ButtonStyling.Primary" Sizing="ButtonSizing.Fill" IconPlacement="ButtonIconPlacement.Right" />
            </div>
            <div class="my-fileupload-btn-pause-all-container">
                <MyButton Value="@("Pause All".ToBp())" Icon="IconType.From(LightIconType.PauseCircle)" Styling="@ButtonStyling.Primary" Sizing="ButtonSizing.Fill" IconPlacement="ButtonIconPlacement.Right" />
            </div>
            <div class="my-fileupload-btn-clear-selected-container">
                <MyButton Value="@("Clear Selected".ToBp())" Icon="IconType.From(LightIconType.WindowClose)" Styling="@ButtonStyling.Primary" Sizing="ButtonSizing.Fill" IconPlacement="ButtonIconPlacement.Right" />
            </div>
            <div class="my-fileupload-btn-clear-all-container">
                <MyButton Value="@("Clear All".ToBp())" Icon="IconType.From(LightIconType.WindowClose)" Styling="@ButtonStyling.Primary" Sizing="ButtonSizing.Fill" IconPlacement="ButtonIconPlacement.Right" />
            </div>
        </div>
        <div class="my-fileupload-progressbars-container">
            @foreach (var file in Value)
            {
                <div class="my-fileupload-progressbar-container">
                    <MyProgressBar For="@(() => file.Progress)" Description="file.Name" Sizing="ProgressBarSizing.LineHeight" />
                </div>
            }
        </div>
    </div>

</CascadingValue>