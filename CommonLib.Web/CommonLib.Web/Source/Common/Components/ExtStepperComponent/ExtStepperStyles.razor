@using CommonLib.Source.Common.Converters
@using static CommonLib.Web.Source.Common.Components.StylesConfig;

@namespace CommonLib.Web.Source.Common.Components.ExtStepperComponent

@inherits MyComponentStylesBase

<style class="@_renderClasses" my-guid="@Guid">

    .k-stepper {
        color: white;
    }

    .k-stepper.k-disabled,
    .k-stepper.disabled {
        pointer-events: none;
        filter: grayscale(0.4) opacity(0.4);
        color: #404040;
    }

    .k-stepper.noninteractive {
        pointer-events: none;
    }

    .k-stepper .k-progressbar .k-state-selected,
    .k-stepper .k-progressbar .k-selected {
        color: white;
        background: linear-gradient(to bottom, rgb(0, 128, 0), rgb(0, 0, 0));
    }

    .k-stepper .k-progressbar {
        color: white;
        background: linear-gradient(to bottom, rgb(32, 32, 32), rgb(0, 0, 0));
    }

    .k-stepper .k-step-done .k-step-indicator,
    .k-stepper .k-step.k-step-disabled.k-step-done .k-step-indicator,
    .k-stepper .k-step-disabled.k-step-done .k-step-indicator {
        border: none;
        color: white;
        background: linear-gradient(225deg, rgb(0, 128, 0), rgb(0, 0, 0));
        box-shadow: 0 0 6px 2px rgb(0, 255, 0), inset 0 0 0 1px rgb(0, 255, 0);
    }

    .k-stepper.disabled .k-step-done .k-step-indicator,
    .k-stepper.disabled .k-step.k-step-disabled.k-step-done .k-step-indicator,
    .k-stepper.disabled .k-step-disabled.k-step-done .k-step-indicator {
        color: #404040;
    }

    .k-stepper .my-k-step-failed .k-step-indicator,
    .k-stepper .k-step.k-step-disabled.my-k-step-failed .k-step-indicator,
    .k-stepper .k-step-disabled.my-k-step-failed .k-step-indicator {
        border: none;
        color: white;
        background: linear-gradient(225deg, rgb(128, 53, 69), rgb(0, 0, 0));
        box-shadow: 0 0 6px 2px rgb(255, 106, 138), inset 0 0 0 1px rgb(255, 106, 138);
    }

    .k-stepper.disabled .my-k-step-failed .k-step-indicator,
    .k-stepper.disabled .k-step.k-step-disabled.my-k-step-failed .k-step-indicator,
    .k-stepper.disabled .k-step-disabled.my-k-step-failed .k-step-indicator {
        color: #404040;
    }

    .k-stepper .k-step-current:not(.k-step-done):not(.my-k-step-failed) .k-step-indicator {
        border: none;
        color: white;
        background: linear-gradient(225deg, rgb(0, 0, 128), rgb(0, 0, 0));
        box-shadow: 0 0 6px 2px rgb(0, 0, 255), inset 0 0 0 1px rgb(0, 0, 255);
    }

    .k-stepper.disabled .k-step-current:not(.k-step-done):not(.my-k-step-failed) .k-step-indicator {
        color: #404040;
    }

    .k-stepper .k-step.k-step-disabled .k-step-indicator,
    .k-stepper .k-step-disabled .k-step-indicator {
        color: #404040;
        border: none;
        background: linear-gradient(to top, rgb(24, 24, 24), rgb(0, 0, 0));
        box-shadow: 0 0 6px 2px rgb(48, 48, 48), inset 0 0 0 1px rgb(48, 48, 48);
    }

    .k-stepper .k-step-indicator {
        color: #646464;
        border: none;
        background: linear-gradient(225deg, rgb(48, 48, 48), rgb(0, 0, 0));
        box-shadow: 0 0 6px 2px rgb(96, 96, 96), inset 0 0 0 1px rgb(96, 96, 96);
    }

    .k-stepper .k-step-indicator {
        border-radius: 50%;
        margin: 6px;
        width: 28px;
        height: 28px;
        border-width: 0;
        border-style: none;
        display: flex;
        align-items: center;
        justify-content: center;
        flex: none;
        position: relative;
        z-index: 1;
        overflow: visible;
        transition-property: color, background-color, border-color;
        transition-duration: .4s;
        transition-timing-function: ease-in-out;
    }

    .k-stepper .k-step-label {
        color: #808080;
        font-style: italic;
    }

    .k-stepper.disabled .k-step-label {
        color: #303030;
        font-style: italic;
    }
    
    .k-stepper .k-step-label-optional {
        color: #646464;
    }

    .k-stepper.disabled .k-step-label-optional {
        color: #202020;
    }

    .k-stepper .k-step-disabled .k-step-label, 
    .k-stepper.k-state-disabled .k-step-label, 
    .k-stepper.k-disabled .k-step-label {
        color: #404040;
    }

    .k-stepper .k-step-disabled .k-step-label-optional, 
    .k-stepper.k-state-disabled .k-step-label-optional, 
    .k-stepper.k-disabled .k-step-label-optional {
        color: #303030;
    }

    .k-stepper .k-step-current .k-step-label {
        font-style: normal;
        font-weight: normal;
        color: white;
    }

    .k-stepper.disabled .k-step-current .k-step-label {
        color: #404040;
    }

    .k-stepper .k-step-current .k-step-label-optional {
        font-style: normal;
        font-weight: normal;
        color: #8e8e8e;
    }

    .k-stepper.disabled .k-step-current .k-step-label-optional {
        color: #303030;
    }

    .k-step-list-horizontal ~ .k-progressbar {
        width: 100%;
        height: 6px;
        top: 17px; /* step ciorcle: 28px + margin 6px * 2 so (40px - 2px (progressbar height)) / 2 = 19px */
    }

    .k-stepper .k-step-indicator::after {
        box-shadow: none;
    }

    .k-stepper .k-step-indicator::after {
        border-radius: 100%;
        content: "";
        border-width: 0;
        border-style: none;
        border-color: transparent;
        pointer-events: none;
        display: none;
        position: absolute;
        top: -4px;
        right: -4px;
        bottom: -4px;
        left: -4px;
        z-index: 2;
    }

    .k-stepper .k-step-focus .k-step-indicator::after, .k-stepper .k-step-link:focus .k-step-indicator::after {
        display: none;
    }

</style>
