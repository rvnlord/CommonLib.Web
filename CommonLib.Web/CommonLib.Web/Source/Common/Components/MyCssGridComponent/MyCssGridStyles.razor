@namespace CommonLib.Web.Source.Common.Components.MyCssGridComponent
@using static CommonLib.Web.Source.Common.Components.StylesConfig;
@using CommonLib.Source.Common.Converters

@inherits MyComponentStylesBase

<style class="@_renderClasses" my-guid="@Guid">
    
    .my-css-grid {
        display: grid;
        width: 100%;
        box-sizing: border-box;
    }

    .my-css-grid.my-test > .my-css-grid-item {
        background: linear-gradient(150deg, rgba(30, 30, 30, 0.95) 0, rgba(8, 8, 8, 0.95) 40%);
        box-shadow: inset 0 0 0 1px #404040;
        font-size: @((FontSize * 1.25).Px());
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .my-css-grid.my-test-bg-only > .my-css-grid-item {
        background: linear-gradient(150deg, rgba(30, 30, 30, 0.95) 0, rgba(8, 8, 8, 0.95) 40%);
        box-shadow: inset 0 0 0 1px #404040;
    }

</style>

