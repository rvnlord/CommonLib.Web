@inherits MyComponentStylesBase

<style class="@_renderClasses" my-guid="@_guid">

    .my-table, .table {
        border: 1px solid #404040;
        box-sizing: border-box;
        box-shadow: 0 0 6px 2px rgb(0,0,144);
        width: 100%;
        color: white;
        line-height: 1.5rem;
        margin-bottom: 0;
    }

        .my-table th, .table th {
            border-top: none;
            border-right: 1px solid #404040;
            box-sizing: border-box;
            background: linear-gradient(to bottom, darkblue, #101010);
            height: calc(1.5em + 10px);
            padding: 5px 10px;
            font-weight: 600;
            line-height: 1.5rem;
        }

        .my-table td, .table td {
            border-top: 1px solid #404040;
            border-right: 1px solid #404040;
            box-sizing: border-box;
            background: linear-gradient(to bottom, #202020, #000000);
            height: calc(1.5em + 5px);
            padding: 5px 10px;
            font-weight: 400;
            line-height: 1.5rem;
        }

            .my-table td:last-child, .my-table th:last-child, .table th:last-child, .table td:last-child {
                border-right: none;
            }

        .table thead th {
            border-bottom: none;
            cursor: pointer;
            text-align: left;
        }

    .table-title-and-icon-container {
        display: flex;
        box-sizing: border-box;
    }

    .table-column-title {
        flex: 1 0 auto;
        height: 1.5rem;
        box-sizing: border-box;
    }

    .table-column-sort-icon {
        flex: 0 0 1.5rem;
        width: 1.5rem;
        height: 1.5rem;
        box-sizing: border-box;
        background-repeat: no-repeat;
        background-position: center center;
    }

    .arrow-up {
        background-image: url("data:image/svg+xml;charset=utf8,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 448 512'%3E%3Cpath fill='white' d='M4.465 263.536l7.07 7.071c4.686 4.686 12.284 4.686 16.971 0L207 92.113V468c0 6.627 5.373 12 12 12h10c6.627 0 12-5.373 12-12V92.113l178.494 178.493c4.686 4.686 12.284 4.686 16.971 0l7.07-7.071c4.686-4.686 4.686-12.284 0-16.97l-211.05-211.05c-4.686-4.686-12.284-4.686-16.971 0L4.465 246.566c-4.687 4.686-4.687 12.284 0 16.97z'/%3E%3C/svg%3E");
    }

    .arrow-down {
        background-image: url("data:image/svg+xml;charset=utf8,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 448 512'%3E%3Cpath fill='white' d='M443.5 248.5l-7.1-7.1c-4.7-4.7-12.3-4.7-17 0L241 419.9V44c0-6.6-5.4-12-12-12h-10c-6.6 0-12 5.4-12 12v375.9L28.5 241.4c-4.7-4.7-12.3-4.7-17 0l-7.1 7.1c-4.7 4.7-4.7 12.3 0 17l211 211.1c4.7 4.7 12.3 4.7 17 0l211-211.1c4.8-4.8 4.8-12.3.1-17z'/%3E%3C/svg%3E");
    }

    table {
        border-collapse: collapse;
        border-spacing: 0;
    }

</style>
