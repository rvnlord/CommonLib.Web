@namespace CommonLib.Web.Source.Common.Components.MyPasswordInputComponent
@using static CommonLib.Web.Source.Common.Components.StylesConfig;

@inherits MyComponentStylesBase

<style class="@_renderClasses" my-guid="@Guid">

    .my-password-mask {
        position: absolute;
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        background: rgba(0, 0, 90, 0.7);
        top: 0;
        box-sizing: border-box;
    }

    input.my-password-input:not([disabled]).my-valid {
        background: @($"linear-gradient(to bottom, {SuccessBackgroundColor}, #000000);")
    }

    input.my-password-input:not([disabled]).my-invalid {
        background: @($"linear-gradient(to bottom, {ErrorBackgroundColor}, #000000);")
    }

</style>