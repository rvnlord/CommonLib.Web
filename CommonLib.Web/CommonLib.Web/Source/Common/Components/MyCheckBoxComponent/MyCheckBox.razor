@namespace CommonLib.Web.Source.Common.Components.MyCheckBoxComponent
@inherits MyCheckBoxBase

<CascadingValue Value="_bpParentToCascade" Name="ParentParameter">

    <div id="@_id" my-guid="@Guid" class="@_renderClasses" style="@_renderStyle" @attributes="@_renderAttributes">
        <label class="my-checkbox-container">
            <input disabled="@InteractivityState.V.IsDisabledOrForceDisabled" type="checkbox" @onclick:stopPropagation="true" @onclick:preventDefault="true" @onclick="CheckBox_ClickAsync" checked="@Value" />
            <span class="my-checkmark"></span>
            @if (DisplayLabel.V == true)
            {
                <span class="my-checkbox-label">@Description</span>
            }
        </label>
    </div>

</CascadingValue>