@namespace CommonLib.Web.Source.Common.Components.MyCheckBoxComponent
@inherits MyCheckBoxBase

<CascadingValue Value="_bpParentToCascade" Name="ParentParameter">

    <div class="@_renderClasses" style="@_renderStyle" @attributes="@_renderAttributes" >
        <label class="my-checkbox-container">
            <input disabled="@State.V.IsDisabledOrForceDisabled" type="checkbox" @onchange="CheckBox_Checked" checked="@Value" />
            <span class="my-checkmark"></span>
            @if (DisplayLabel.V == true)
            {
                <span class="my-checkbox-label">@Description</span>
            }
        </label>
    </div>

</CascadingValue>