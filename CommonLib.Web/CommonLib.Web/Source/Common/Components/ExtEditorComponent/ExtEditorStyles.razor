@using CommonLib.Source.Common.Converters
@using static CommonLib.Web.Source.Common.Components.StylesConfig;

@namespace CommonLib.Web.Source.Common.Components.ExtEditorComponent

@inherits MyComponentStylesBase

<style class="@_renderClasses" my-guid="@_guid">

    .k-editor {
        border-color: transparent;
        border-width: 0;
        color: white;
        background-color: transparent;
        box-shadow: inset 0 0 0 1px #404040;
        border-width: 0;
        border-style: none;
        box-sizing: border-box;
        outline: 0;
        font-family: inherit;
        font-size: 1rem;
        line-height: 1.5;
        display: flex;
        flex-flow: column nowrap;
        position: relative;
        -webkit-touch-callout: none;
        -webkit-tap-highlight-color: none;
        transition: all 0.5s;
    }

        .k-editor:focus-within:not(.disabled) {
            color: white;
            box-shadow: inset 0 0 0 1px #404040, 0 0 6px 2px blue;
            outline: none;
        }

        .k-editor-toolbar, .k-editor > .k-toolbar {
            border-width: 0;
            flex-shrink: 0;
            background: linear-gradient(335deg, rgb(0, 0, 64), rgb(0, 0, 0));
            box-shadow: inset 0 1px 0 0 #404040, inset -1px 0 0 #404040, inset 1px 0 0 #404040;
            padding: 10px;
        }

    .k-editor > .k-toolbar .k-button {
        gap: 0;
    }

    .k-editor-content {
        flex: 1 1 auto;
        overflow-y: auto;
        background: linear-gradient(to bottom, #303030, #000000);
        box-shadow: inset 0 0 0 1px #404040;
        padding: 5px 9px;
        position: relative;
    }

        .k-editor-content > .ProseMirror {
            padding: 0;
            width: 100%;
            height: 100%;
            position: relative;
            box-sizing: border-box;
            outline: none;
            white-space: pre-wrap;
            overflow: auto;
        }

    .k-editor.k-disabled > .k-editor-content {
        background: linear-gradient(to bottom, #101010, #000000);
        box-shadow: inset 0 0 0 1px #303030;
        color: #404040;
        outline: 0 none;
        resize: none;
        box-sizing: border-box;
    }

    .k-editor:not([disabled]):not(.disabled):not(.k-disabled).my-valid > .k-editor-content,
    .k-editor:not([disabled]):not(.disabled):not(.k-disabled).k-valid > .k-editor-content {
        background: @SuccessBackgroundGradient;
    }

    .k-editor:not([disabled]):not(.disabled):not(.k-disabled).my-invalid > .k-editor-content,
    .k-editor:not([disabled]):not(.disabled):not(.k-disabled).k-invalid > .k-editor-content {
        background: @ErrorBackgroundGradient;
    }

    .k-editor.k-disabled > .k-editor-toolbar, .k-editor.k-disabled > .k-toolbar {
        background: linear-gradient(335deg, rgb(16, 16, 16), rgb(0, 0, 0));
        box-shadow: inset 0 1px 0 0 #303030, inset -1px 0 0 #303030, inset 1px 0 0 #303030;
        pointer-events: none;
    }

    .k-editor.k-disabled > .k-editor-content .k-content {
        color: #404040;
    }

    .k-editor-placeholder {
        position: absolute;
        color: #404040;
        top: 5px;
        left: 9px;
        font-style: italic;
        text-align: left;
        pointer-events: none;
        opacity: 0;
    }

</style>
