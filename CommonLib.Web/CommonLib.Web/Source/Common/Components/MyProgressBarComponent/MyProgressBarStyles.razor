@namespace CommonLib.Web.Source.Common.Components.MyProgressBarComponent
@using static CommonLib.Web.Source.Common.Components.StylesConfig;
@using CommonLib.Source.Common.Extensions.Collections

@inherits MyComponentStylesBase

<style class="@_renderClasses" my-guid="@Guid">

    .my-progressbar {
        height: 34px;
        max-height: 34px;
        display: grid;
        overflow: hidden;
        white-space: nowrap;
        grid-template-columns: 1fr auto;
        grid-column-gap: 10px;
        padding: 5px 9px;
        background: linear-gradient(to bottom, #151515, #000000);
        box-sizing: border-box;
        position: relative;
        align-items: center;
        text-shadow: @Enumerable.Repeat("0 0 3px black", 20).JoinAsString(", ");
    }

    .my-progressbar.disabled {
        opacity: 0.3;
    }

    .my-progressbar > .progress {
        position: absolute;
        height: 100%;
        width: 0;
    }

    .my-progressbar.success > .progress {
        background: @SuccessBackgroundGradient;
    }

    .my-progressbar.warning > .progress {
        background: @WarningBackgroundGradient;
    }

    .my-progressbar.error > .progress {
        background: @ErrorBackgroundGradient;
    }

    .my-progressbar.primary > .progress {
        background: @PrimaryBackgroundGradient;
    }

    .my-progressbar.info > .progress {
        background: @InfoBackgroundGradient;
    }

    .my-progressbar > .progress-description {
        z-index: 1;
        text-overflow: ellipsis;
        font-weight: 100;
        overflow: hidden;
    }

    .my-progressbar > .progress-value {
        z-index: 1;
    }

</style>
