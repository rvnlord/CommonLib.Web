@using static Web.Source.Common.Components.StylesConfig
@using CommonLib.Source.Common.Converters

@inherits MyComponentStylesBase

<style class="@_renderClasses" my-guid="@_guid">

    .my-nav-link {
        color: rgb(128, 128, 255);
        display: inline-flex;
        align-items: center;
        flex-wrap: wrap;
    }

    .my-nav-link:hover, .my-nav-link:active, .my-nav-link:focus {
        color: #ff6464;
        text-decoration: none;
    }


    .my-nav-link.disabled {
        color: rgb(64, 64, 64);
    }

    *:not(.my-nav-item) > .my-nav-link > .my-nav-link-icon {
        width: auto;
        height: @FontSize.Px();
        max-width: none;
        max-height: @FontSize.Px();
        flex: 0 0 auto;
    }

        *:not(.my-nav-item) > .my-nav-link > .my-nav-link-icon > svg,
        *:not(.my-nav-item) > .my-nav-link.disabled > .my-nav-link-icon > svg {
            width: auto !important;
            height: 100% !important;
        }
    
    *:not(.my-nav-item) > .my-nav-link > .my-nav-link-icon > svg > path {
        fill: rgb(128, 128, 255);
    }

    *:not(.my-nav-item) > .my-nav-link.disabled > .my-nav-link-icon > svg > path {
        fill: rgb(64, 64, 64);
    }

    *:not(.my-nav-item) > .my-nav-link:hover:not(.disabled) > .my-nav-link-icon > svg > path,
    *:not(.my-nav-item) > .my-nav-link:active:not(.disabled) > .my-nav-link-icon > svg > path,
    *:not(.my-nav-item) > .my-nav-link:focus:not(.disabled) > .my-nav-link-icon > svg > path {
        fill: rgb(255, 100, 100);
    }

    .my-nav-link > div > svg > path {
        fill: rgb(112, 112, 112);
    }

    .my-navbar > .my-nav-item > .my-nav-link {
        color: rgb(112, 112, 112);
        float: left;
        font-size: @NavBarFontSize.Px();
        box-shadow: inset 1px 0 0 #404040; /* border-left: */
        padding: @((Gutter * 1.5).Px()) @Gutter.Px();
        box-sizing: border-box;
        display: flex;
        align-items: center;
        justify-content: left;
        white-space: nowrap;
        position: relative;
        transition: color 0.5s;
        flex-wrap: nowrap;
    }

    .my-nav-menu > .my-nav-item > .my-nav-link {
        color: rgb(112, 112, 112);
        display: block;
        padding: @Gutter.Px();
        font-size: 1rem;
        font-weight: 400;
        line-height: @LineHeightRem;
        text-align: left;
        box-sizing: border-box;
        white-space: nowrap;
        display: flex;
        align-items: center;
        justify-content: left;
        transition: color 0.5s;
        flex-wrap: nowrap;
    }

    .my-navbar .my-nav-item > .my-nav-link.disabled {
        color: rgb(64, 64, 64);
        cursor: default;
    }

    .my-navbar .my-nav-item > .my-nav-link.disabled svg > path {
        fill: rgb(64, 64, 64);
    }

    .my-navbar > .my-nav-item:first-child > .my-nav-link {
        box-shadow: none; /* no emulated border */
    }

    .my-navbar > .my-nav-item.my-last-left > .my-nav-link {
        /*box-shadow: inset 1px 0 0 #404040, inset -1px 0 0 #404040;*/ /* border-left + border-right  */
        box-shadow: inset 1px 0 0 #404040, 1px 0 0 #404040; /* border-left + border-right (outside)  */
    }

    .my-navbar > .my-nav-item > .my-nav-link > .my-nav-link-content {
        font-size: @NavBarFontSize.Px();
        line-height: 1.5;
        height: @((NavBarFontSize * 1.5).Px());
    }

    .my-nav-menu > .my-nav-item > .my-nav-link > .my-nav-link-content {
        font-size: @FontSize.Px();
        line-height: 1.5;
        height: @((FontSize * 1.5).Px());
    }

    @@media (max-width: 767.98px) {
        .my-nav-item > .my-nav-link {
            width: 100%
        }

        .my-navbar > .my-nav-item > .my-nav-link {
            box-shadow: none; /* cancel simulated borders */
        }

        .my-navbar > .my-nav-item:last-child > .my-nav-link {
            box-shadow: none; /* cancel simulated borders */
        }

        .my-navbar > .my-nav-item.my-last-left > .my-nav-link {
            box-shadow: none; /* cancel simulated borders */
        }

        .my-navbar > .my-nav-item > .my-nav-link > .my-nav-link-content,
        .my-nav-menu > .my-nav-item > .my-nav-link > .my-nav-link-content {
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
            flex: 1 1 auto;
        }
    }

    .my-nav-item > .my-nav-link.active,
    .my-nav-item > .my-nav-link.active-descendant {
        color: rgb(255, 255, 255);
        text-decoration: none;
        @*background-image: url("@(NavigationManager.BaseUri + "/images/blue-feather.png")");*@
        background-image: linear-gradient(to bottom, darkblue, black);
        background-size: contain;
        background-repeat: no-repeat;
        background-position: center center;
        box-sizing: border-box;
    }

    .my-nav-item > .my-nav-link:hover {
        text-decoration: none;
        background-size: contain;
        background-repeat: no-repeat;
        background-position: center center;
        box-sizing: border-box;
    }

    .my-nav-item > .my-nav-link.active > div > svg > path,
    .my-nav-item > .my-nav-link.active-descendant > div > svg > path {
        fill: white !important;
    }

    .my-nav-item.my-toggler .my-nav-link-icon {
        width: @((NavBarFontSize * 1.5).Px());
        height: @((NavBarFontSize * 1.5).Px());
        max-width: @((NavBarFontSize * 1.5).Px());
        max-height: @((NavBarFontSize * 1.5).Px());
        flex: 0 0 @((NavBarFontSize * 1.5).Px());
        margin: 0 @HalfGutter.Px();
        display: none;
    }

    .my-nav-item.my-toggler {
        display: none;
    }

    @@media (max-width: 767.98px) {
        .my-nav-item.my-toggler {
            display: block;
            position: absolute;
            width: auto;
        }
    }

    .my-nav-item.my-search .my-nav-link-icon {
        width: @((NavBarFontSize * 1.5).Px());
        height: @((NavBarFontSize * 1.5).Px());
        max-width: @((NavBarFontSize * 1.5).Px());
        max-height: @((NavBarFontSize * 1.5).Px());
        flex: 0 0 @((NavBarFontSize * 1.5).Px());
        margin: 0 @HalfGutter.Px();
        display: none;
    }

    .my-nav-item.my-search > .my-nav-link {
        height: 100%;
    }

    .my-navbar .my-nav-item > .my-nav-link > .my-icon.pre-render,
    .my-navbar .my-nav-item > .my-icon.pre-render {
        width: 0 !important;
        height: 0 !important;
        margin: 0 !important;
        flex: 0 0 auto;
    }

    @@media (max-width: 767.98px) {
        .my-nav-item.my-search {
            display: block;
            position: absolute;
            width: auto;
            left: calc(100% - @(((NavBarFontSize * 1.5 + Gutter * 3) * 2).Px()));
        }
    }

    @@media (max-width: 1199.98px) {
        .my-nav-item.my-login .my-nav-link-icon {
            width: @((NavBarFontSize * 1.5).Px());
            height: @((NavBarFontSize * 1.5).Px());
            max-width: @((NavBarFontSize * 1.5).Px());
            max-height: @((NavBarFontSize * 1.5).Px());
            flex: 0 0 @((NavBarFontSize * 1.5).Px());
            margin: 0 @HalfGutter.Px();
        }

        .my-nav-item.my-login .my-nav-link {
            width: @((NavBarFontSize * 1.5 + Gutter * 3).Px());
            overflow: hidden;
        }
    }

    @@media (max-width: 767.98px) {
        .my-nav-item.my-login {
            display: block;
            position: absolute;
            width: auto;
            left: calc(100% - @((NavBarFontSize * 1.5 + Gutter * 3).Px()) );
        }
    }

    @@media (max-width: 1199.98px) {
        .my-nav-item.my-home .my-nav-link-icon {
            width: @((NavBarFontSize * 1.5).Px());
            height: @((NavBarFontSize * 1.5).Px());
            max-width: @((NavBarFontSize * 1.5).Px());
            max-height: @((NavBarFontSize * 1.5).Px());
            flex: 0 0 @((NavBarFontSize * 1.5).Px());
            margin: 0 @HalfGutter.Px();
        }

        .my-nav-item.my-home .my-nav-link {
            width: @((NavBarFontSize * 1.5 + Gutter * 3).Px());
            overflow: hidden;
        }
    }

    @@media (max-width: 767.98px) {
        .my-nav-item.my-home {
            display: block;
            position: absolute;
            width: auto;
            left: @((NavBarFontSize * 1.5 + Gutter * 3).Px());
        }
    }
    
</style>
